<div class="article">
  <div class="article-title">
    <h1><%= @article.title %></h1>
    <a href="/articles/<%= @article.id %>/edit"><i class="fa-solid fa-pen-to-square"></i></a>
    <%= link_to "",
        article_path(@article),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
        class: "fa-solid fa-trash-can" %>
  </div>
  <p><%= @article.content %></p>
</div>
